
// Generate a simple placeholder box with a custom header title
mixin placeholderBox(name)
  .box.box-primary
    .box-header.no-border
      h3.box-title= name
      .box-tools.pull-right
        button.btn.btn-box-tool(data-widget='collapse')
          i.fa.fa-minus
        button.btn.btn-box-tool(data-widget='remove')
          i.fa.fa-times
    .box-body
      div(id='bingle' style='width:100%; height:100px; padding-left:20px; padding-right:20px;')

mixin placeholderSmallBox(head1, sub1, head2, sub2)
  .row
    .col-lg-6.col-xs-6
      .small-box.bg-primary
        .box-header
          .pull-right.box-tools
        .inner
          h3= head1
          p= sub1
        .icon
          i.ion.ion-ionic
    .col-lg-6.col-xs-6
      .small-box.bg-primary
        .box-header
          .pull-right.box-tools
        .inner
          h3= head2
          p= sub2
        .icon
          i.ion.ion-ionic
          
mixin basicMap(mapId, height)
  div(id=mapId, style='height: '+height+'px; width: 100%;')   
    
         
mixin basicMapWithBasemapToggle(mapId, height, basemapChangeFunction)
  div(id=mapId, style='height: '+height+'px; width: 100%;')
  #basemaps-wrapper.leaflet-bar
    select#basemaps(name='basemaps', onchange=basemapChangeFunction+'(basemaps)')
      option(value='Imagery')
        | Imagery
        options
          option(value='Streets') Streets
          option(value='NationalGeographic')
            | National Geographic
            options
              option(value='Oceans')
                | Oceans
                options
                  option(value='Gray')
                    | Gray
                    options
                      option(value='DarkGray')
                        | Dark Gray
                        options
                          option(value='Topographic')
                            | Topographic
                            options
                              option(value='ShadedRelief')
                                | Shaded Relief
                                options
