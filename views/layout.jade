doctype
html
  include includes/head.jade  
  block navigationLinks
    - var navSelected = 'Operations' // by default

  - var navigationMenuOptions = [{"name":"Operations","url":"/ops","icon":"fa fa-dashboard"},{"name":"Soil Sensors","url":"/deSoil","icon":"fa fa-bar-chart"},{"name":"Sheep Sensors","url":"/deSheep","icon":"fa fa-paw"},{"name":"Weather Sensors","url":"/deWeather","icon":"fa fa-cloud"}];


  body.hold-transition.skin-black-light.sidebar-mini
    .wrapper
      header.main-header
        // Logo
        a.logo(href='index2.html')
          // mini logo for sidebar mini 50x50 pixels
          span.logo-mini IOT
          // logo for regular state and mobile devices
          span.logo-lg IOT
        // Header Navbar
        nav.navbar.navbar-static-top(role='navigation')
          // Sidebar toggle button
          a.sidebar-toggle(href='#', data-toggle='offcanvas', role='button')
            span.sr-only Toggle navigation
          // Navbar Right Menu
          .navbar-custom-menu.active
            ul.nav.navbar-nav
              // Notifications Menu
              li.dropdown.tasks-menu
                a.dropdown-toggle
                  | Date Now: 15:33:04, 20/08/15 
              li.dropdown.tasks-menu
                // Menu Toggle Button
                a.dropdown-toggle(href='#', onclick='notificationsHandler.generateDemoMessage();')
                  i.fa.fa-flag-o
                  span.label.label-danger
                ul.dropdown-menu
                  li.header You have 0 new notifications
                  li
                    // Inner menu: contains the tasks
                    ul.menu
                      li
                        // Task item
                        a(href='#')
                          // Task title and progress text
                          h3
                            | Sensor Battery Life
                            small.pull-right 20%
                          // The progress bar
                          .progress.xs
                            // Change the css width attribute to simulate progress
                            .progress-bar.progress-bar-aqua(style='width: 20%', role='progressbar', aria-valuenow='20', aria-valuemin='0', aria-valuemax='100')
                              span.sr-only 20% Complete
                      // end task item
                  li.footer
                    a(href='#') View all notifications
              // User Account Menu
              li.dropdown.user.user-menu
                // Menu Toggle Button
                a.dropdown-toggle(href='#', data-toggle='dropdown')
                  // The user image in the navbar
                  img.user-image(src='/vendor/AdminLTE/dist/img/boxed-bg.jpg', alt='User Image')
                  // hidden-xs hides the username on small devices so only the image appears.
                  span.hidden-xs Dashboard Admin
                ul.dropdown-menu
                  // The user image in the menu
                  li.user-header
                    img.img-circle(src='/vendor/AdminLTE/dist/img/boxed-bg.jpg', alt='User Image')
                    p
                      | IoT Dashboard Admin
                      small Member since Nov. 2016
                  // Menu Body
                  li.user-body
                    .col-xs-4.text-center
                      a(href='#') Value
                    .col-xs-4.text-center
                      a(href='#') Value
                    .col-xs-4.text-center
                      a(href='#') Value
                  // Menu Footer
                  li.user-footer
                    .pull-left
                      a.btn.btn-default.btn-flat(href='#') Profile
                    .pull-right
                      a.btn.btn-default.btn-flat(href='#') Sign out
      aside.main-sidebar
        section.sidebar
          ul.sidebar-menu   
            li.header IOT DASHBOARD SECTIONS
              for data in navigationMenuOptions
                if navSelected === data.name
                  li.active
                    a.selected(href=data.url, title=data.name)
                      i(class=data.icon)
                      span= data.name
                else
                  li
                    a(href=data.url, title=data.name)
                      i(class=data.icon)
                      span= data.name

    .content-wrapper
      section.content-header
        block sectionContentHeader
      section.content
        .row
          section.col-lg-6.connectedSortable
            block sectionContentLeftCol
          section.col-lg-6.connectedSortable
            block sectionContentRightCol
    footer.main-footer
      include includes/foot.jade
